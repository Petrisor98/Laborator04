<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneDialerActivity">

    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:enabled="false"
        android:gravity="center"
        android:inputType="phone" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:columnCount="3"
        app:rowCount="8">

        <ImageButton
            android:id="@+id/backspaceImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/backspace" />

        <Space
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_row="1"
            app:layout_column="0"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="left"
            app:layout_column="0"
            app:layout_row="2"
            android:text="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_column="1"
            app:layout_row="2"
            android:text="2"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="right"
            app:layout_column="2"
            app:layout_row="2"
            android:text="3"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="left"
            app:layout_column="0"
            app:layout_row="3"
            android:text="4"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_column="1"
            app:layout_row="3"
            android:text="5"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="right"
            app:layout_column="2"
            app:layout_row="3"
            android:text="6"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="left"
            app:layout_column="0"
            app:layout_row="4"
            android:text="7"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_column="1"
            app:layout_row="4"
            android:text="8"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="right"
            app:layout_column="2"
            app:layout_row="4"
            android:text="9"/>

        <Button
            android:id="@+id/starButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="left"
            app:layout_column="0"
            app:layout_row="5"
            android:text="*"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            app:layout_column="1"
            app:layout_row="5"
            android:text="0"/>

        <Button
            android:id="@+id/diezButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            app:layout_column="2"
            app:layout_gravity="right"
            app:layout_row="5" />

        <Space
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_row="6"
            app:layout_column="0"/>

        <ImageButton
            android:id="@+id/callImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/call"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="7" />

        <ImageButton
            android:id="@+id/contactsManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="7"
            app:srcCompat="@drawable/contacts" />

        <ImageButton
            android:id="@+id/hangupImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hangup"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="7" />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>